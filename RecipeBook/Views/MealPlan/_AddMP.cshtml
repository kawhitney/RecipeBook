<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Add to the @Context.Session.GetString("FamilyName") Family Meal Plans</h5>
</div>
<form action="mealplan/add" method="post" class="row g-3">
    <input name="UserID" value="@Context.Session.GetInt32("uid")" hidden>
    <div class="modal-body mx-3 d-flex flex-column">
        <label for="Name">Meal Plan Name:</label>
        <input name="Name" type="text">
    </div>
    <div class="modal-footer col-12">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        
        <button type="submit" class="btn btn-primary">Next Step</button>
    </div>
</form>

