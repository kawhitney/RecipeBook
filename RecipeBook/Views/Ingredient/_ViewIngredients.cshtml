@model List<Ingredient>
<ul class="list-group">
    @foreach(Ingredient i in Model){
    <li class="list-group-item  list-group-item-action d-flex flex-row justify-content-between">
        <div>@i.QuantityAmount @if(@i.QuantityType!="count"){@i.QuantityType} @i.Type</div>
        &ensp;
        <form action="/@i.ID/deleteIngredient" method="post" class="">
                <button type="submit"class="btn p-0 m-0"style="background-color:transparent">&times;</button>
        </form>
    </li>
    }
</ul>