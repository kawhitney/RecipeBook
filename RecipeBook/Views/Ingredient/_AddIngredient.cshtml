<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Add an Ingredient to make @Model.Name</h5>
</div>
<form action="/addIngredient" method="post" class="row g-3">
    <div class="modal-body mx-3 d-flex flex-column">
        <!-- RecipeID -->
        <input name="RecipeID" value="@Model.ID" required hidden>
        <!-- Quantity -->
        <label class="form-label">Quantity</label>
        <input type="number" step="0.001" class="form-control" name="QuantityAmount" required>
        <select class="form-select" name="QuantityType" required>
                    <option selected disabled value="">-- select --</option>
                    <option value="count"></option>
                    <option value="lb">lb</option>
                    <option value="c.">c.</option>
                    <option value="TBSP">TBSP</option>
                    <option value="tsp">tsp</option>
                    <option value="g">g</option>
                    <option value="ml">ml</option>
                    <option value="pinch">pinch</option>
        </select>
        <!-- Type -->
        <label for="Type" class="form-label">Ingredient</label>
        <input type="text" class="form-control" name="Type" required>

    </div>
    <div class="modal-footer col-12">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Add Equipment</button>
    </div>
</form>