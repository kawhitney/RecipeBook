<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Add an Ingredient to make @Model.Name</h5>
</div>
<form action="/addIngredient" method="post" class="row g-3">
    <div class="modal-body d-flex flex-column">
        <!-- RecipeID -->
        <input name="RecipeID" value="@Model.ID" required hidden>
        <!-- Quantity -->
        <div class="form-group d-flex flex-row align-items-center justify-content-between mb-3">
            <label class="form-label">Quantity:</label>
            <div class="d-flex w-75">
                <input type="number" step="0.001" min="0" class="form-control mx-2b w-50" name="QuantityAmount" placeholder="Amount" required>
                <select class="form-select text-center" name="QuantityType" required>
                    <option selected disabled value="">-- Measurement --</option>
                    <option value="count"></option>
                    <option value="lb">lb</option>
                    <option value="c.">c.</option>
                    <option value="TBSP">TBSP</option>
                    <option value="tsp">tsp</option>
                    <option value="oz">oz</option>
                    <option value="g">g</option>
                    <option value="ml">ml</option>
                    <option value="pinch">pinch</option>
                </select>
            </div>       
        </div>
        <div class="form-group d-flex flex-row align-items-center justify-content-between">
            <label for="Type" class="form-label">Ingredient:</label>
            <div class="d-flex w-75">
                <!-- Style -->
                <select class="form-select text-center w-50" name="Style" required>
                        <option selected disabled value="">-- Style --</option>
                        <option value="whole">Whole</option>
                        <option value="measured">Measured</option>
                        <option value="quartered">Quartered</option>
                        <option value="cubed">Cubed</option>
                        <option value="diced">Diced</option>
                        <option value="chopped">Chopped</option>
                        <option value="sliced">Sliced</option>
                        <option value="Julienne Style">Julienne</option>
                        <option value="shredded">Shredded</option>
                        <option value="grated">Grated</option>
                        <option value="minced">Minced</option>
                        <option value="crushed">Crushed</option>
                        <option value="See Directions">See Directions</option>
                </select>
                <!-- Type -->
                <input type="text" class="form-control" name="Type" placeholder="Name" required>
            </div>
        </div>

    </div>
    <div class="modal-footer col-12">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Add Ingredient</button>
    </div>
</form>