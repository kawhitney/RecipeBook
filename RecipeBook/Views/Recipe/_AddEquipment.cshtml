<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Add a Piece of Equipment needed to make @Model.Name</h5>
</div>
<form action="addEquipment" method="post" class="row g-3">
    <div class="modal-body mx-3 d-flex flex-column">
        <!-- RecipeID -->
        <input name="RecipeID" value="@Model.ID" required hidden>
        <!-- Size -->
        <label for="Size" class="form-label">Size</label>
        <input type="text" class="form-control" name="Size">
        <!-- Type -->
        <label for="Type" class="form-label">Equipment Type</label>
        <input type="text" class="form-control" name="Type" required>

    </div>
    <div class="modal-footer col-12">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Add Equipment</button>
    </div>
</form>