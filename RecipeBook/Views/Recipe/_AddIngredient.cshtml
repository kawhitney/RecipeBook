<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Add an Ingredient to make @Model.Name</h5>
</div>
<form action="addIngredient" method="post" class="row g-3">
    <div class="modal-body mx-3 d-flex flex-column">
        <input name="RecipeID" value="@Model.ID" required hidden>
    </div>
    <div class="modal-footer col-12">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        
        <button type="submit" class="btn btn-primary">Add Ingredient</button>
    </div>
</form>