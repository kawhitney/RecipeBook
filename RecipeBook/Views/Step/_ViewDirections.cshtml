@model List<Step>
<ul class="list-group">
    @foreach(Step s in Model.OrderBy(s => s.Number).ToList()){
        
        <li class="list-group-item  list-group-item-action d-flex flex-row justify-content-between">
            <div class="d-flex flex-row">
                <div style="width: fit-content;">@s.Number ) &emsp;</div>
                <div style="width: fit-content;">@s.Direction</div>
                &emsp;
            </div> 
            <form action="/@s.ID/deleteStep" method="post" class="">
                <button type="submit"class="btn btn-sm"style="background-color:transparent">&times;</button>
            </form>
        </li>
    }
</ul>